<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<table class="table">
				<thead>
					<tr>
						<th>
							編號
						</th>
						<th>
							標題
						</th>
						<th>
							創立時間
						</th>
						<th>
							作者
						</th>
					</tr>
				</thead>
				<tbody>
					<% @posts.each do |post| %>
					<tr class="active" >
						<td>
							1
						</td>
						<td>
							<p><%= link_to post.title, post %></p>
						</td>
						<td>
							<p><%= post.created_at.strftime("%B %d, %Y") %>
						</td>
						<td>
							<p><%= find_name_by_admin_id(post.admin_id) %></p>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
